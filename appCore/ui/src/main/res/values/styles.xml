    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="background">@color/color_app_second</item>
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="fontFamily">@font/cairo_semibold</item>
        <item name="cornerRadius">@dimen/dimen10</item>
        <item name="android:padding">@dimen/dimen12</item>
    </style>

    <style name="alert_dialog_theme" parent="android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextInputDropdownLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/color_app_second</item>
        <item name="boxStrokeWidth">@dimen/dimen1</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/color_medium_grey</item>
        <item name="android:textColorHint">@color/color_medium_grey</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen10</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen10</item>
        <item name="android:paddingTop">@dimen/dimen10</item>
        <item name="android:paddingBottom">@dimen/dimen10</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/edit_text_status_color</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeErrorColor">@color/color_red_text</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">@color/edit_text_status_color</item>
        <item name="errorTextColor">@color/color_red_text</item>
        <item name="android:textColorHint">@color/edit_text_status_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen10</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen10</item>
        <item name="errorEnabled">false</item>
    </style>
