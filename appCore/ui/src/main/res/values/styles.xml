<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_app_main</item>
        <item name="colorPrimaryVariant">@color/color_app_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_app_main</item>
        <item name="colorSecondaryVariant">@color/color_app_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- App Font -->
        <item name="fontFamily">@font/cairo</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

